{
  "name": "@repo/ocr",
  "type": "module",
  "scripts": {
    "build": "tsup && tsc-alias",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf .turbo && rimraf node_modules",
    "clear:force": "rimraf *.js --force"
  },
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      },
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    },
    "./*": {
      "require": {
        "default": "./dist/*.cjs",
        "types": "./dist/*.d.cts"
      },
      "import": {
        "default": "./dist/*.js",
        "types": "./dist/*.d.ts"
      }
    }
  },
  "dependencies": {
    "@repo/translate": "*",
    "@google-cloud/storage": "^7.11.2",
    "@repo/cloud-storage": "*",
    "canvas": "^2.11.2",
    "jimp": "^0.22.12",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.1.1",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/is-url": "^1.2.32",
    "@types/node-fetch": "^2.6.11",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.2.4",
    "typescript": "latest"
  }
}
