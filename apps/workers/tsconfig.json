{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "allowJs": true,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["../../apps/server/src/*"]
    },
    "moduleResolution": "node",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}